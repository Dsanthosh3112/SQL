-- Query to get all players who scored runs in a match
SELECT p.FullName, s.Runs, s.Wickets, m.Date
FROM Scorecards s
JOIN Players p ON s.PlayerID = p.PlayerID
JOIN Matches m ON s.MatchID = m.MatchID
WHERE s.Runs > 0;

-- Query to get the winner of each match
SELECT m.Date, m.Venue, m.Winner 
FROM Matches m;

-- Query to update the runs scored by a player in a match
UPDATE Scorecards SET Runs = 80 WHERE ScorecardID = 2;

-- Query to update the match winner
UPDATE Matches SET Winner = 'India' WHERE MatchID = 102;

-- Query to delete a scorecard entry
DELETE FROM Scorecards WHERE ScorecardID = 3;
